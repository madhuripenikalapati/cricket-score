<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dhoni"
    tools:context="com.example.madhuri.cricketscore.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:text="Team A"
                    android:textColor="#616161"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:text="0/0"
                    android:textColor="#000000"
                    android:textSize="60sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OVERS" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="increaseTeamOverA"
                        android:text="+" />

                    <TextView
                        android:id="@+id/oversA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="decreaseTeamOverA"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="12dp"
                        android:onClick="add1runTeamA"
                        android:text="1" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="add2runTeamA"
                        android:text="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="12dp"
                        android:onClick="add3runTeamA"
                        android:text="3" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="add4runTeamA"
                        android:text="4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="12dp"
                        android:onClick="add5runTeamA"
                        android:text="5" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="add6runTeamA"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="12dp"
                        android:onClick="add1runTeamA"
                        android:text="WD" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="add1runTeamA"
                        android:text="NB" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="increaseWicketA"
                        android:text="WICKET" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:text="Team B"
                    android:textColor="#616161"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:text="0/0"
                    android:textColor="#000000"
                    android:textSize="60sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OVERS" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="increaseTeamOverB"
                        android:text="+" />

                    <TextView
                        android:id="@+id/oversB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:onClick="decreaseTeamOverB"
                        android:text="-" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="12dp"
                        android:onClick="add1runTeamB"
                        android:text="1" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="add2runTeamB"
                        android:text="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="12dp"
                        android:onClick="add3runTeamB"
                        android:text="3" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="add4runTeamB"
                        android:text="4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="12dp"
                        android:onClick="add5runTeamB"
                        android:text="5" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="add6runTeamB"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginRight="12dp"
                        android:onClick="add1runTeamB"
                        android:text="WD" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="12dp"
                        android:onClick="add1runTeamB"
                        android:text="NB" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="increaseWicketB"
                        android:text="WICKET" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="reset"
            android:text="Reset" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
